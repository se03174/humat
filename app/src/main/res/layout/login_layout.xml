<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/login_" />


    <EditText
        android:id="@+id/Passck_ETXT"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="false"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundbox"
        android:ems="10"
        android:fontFamily="@font/notosansk_light"
        android:gravity="center|center_horizontal"
        android:hint="E-mail Address"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/Pass_ETXT"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundbox"
        android:ems="10"
        android:fontFamily="@font/notosansk_light"
        android:gravity="center|center_horizontal"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/Login_BTN"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Passck_ETXT"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/roundbox2"
        android:backgroundTint="@null"
        android:fontFamily="@font/notosansk_regular"
        android:gravity="center|center_horizontal"
        android:text="LOGIN"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/Join_BTN"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login_BTN"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbox2"
        android:backgroundTint="@null"
        android:fontFamily="@font/notosansk_regular"
        android:gravity="center|center_horizontal"
        android:text="JOIN"
        android:textColor="@color/white"/>


</LinearLayout>